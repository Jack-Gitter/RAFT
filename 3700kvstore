#!/usr/bin/env python3

import argparse, socket, time, json, select, struct, sys, math, os, random, math

BROADCAST = "FFFF"

class Replica:
    def __init__(self, port, id, others):
        self.port = port
        self.id = id
        self.others = others
        self.leader_id = "FFFF"
        self.follower = True
        self.leader = False
        self.candidate = False
        self.election_timeout = random.uniform(.150, .300)
        self.term = 1
        self.unique_MID = 912312

        self.next_indexes = {}
        for other in self.others:
            self.next_indexes[other] = 0

        self.append_entry_rpc_responses = {}

        self.log_values = {}
        self.log_terms = {}
        self.log_indexes = {}

        self.state_machine_values = {}
        self.state_machine_terms = {}
        self.state_machine_indexes = {}

        self.votes = []
        self.voted_for = None
        self.currtime = 0

        self.socket = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
        self.socket.bind(('localhost', 0))

        print("Replica %s starting up" % self.id, flush=True)
        hello = { "src": self.id, "dst": BROADCAST, "leader": BROADCAST, "type": "hello" }
        self.send(hello)
        print("Sent hello message: %s" % hello, flush=True)

    def send(self, message):
        self.socket.sendto(json.dumps(message).encode('utf-8'), ('localhost', self.port))

    def send_append_entry_rpc(self, msg):
        response = {"src": str(self.id), "dst": BROADCAST, "leader": str(self.id), 'client': msg['src'],
                "type": "append_entry_rpc", "MID": msg['MID'], "key": msg['key'], "value": msg['value']}
        self.send(response)

    def respond_to_put(self, msg):
        response = {}
        # Send a redirect if we are not the leader, otherwise add the message to our log, and send append_entry_rpcs
        if self.leader_id != self.id:
            response = {"src": str(self.id), "dst": msg['src'], "leader": self.leader_id, "type": "redirect", "MID": msg['MID']} 
            self.send(response)
        else:
            self.log_values[msg['key']] = msg['value']
            print("leader's log is now: " + str(self.log_values), flush=True)
            self.log_terms[msg['key']] = self.term
            self.log_indexes[msg['key']] = len(self.log_values)-1
            self.send_append_entry_rpc(msg)


        # Send append_entry_rpc to replicas so they can update their logs

    def respond_to_get(self, msg):
        response = {}
        if self.leader_id != self.id:
            response = {"src": str(self.id), "dst": msg['src'], "leader": self.leader_id, "type": "redirect", "MID": msg['MID']} 
        else:
            value = self.log_values[msg['key']]
            response = {"src": str(self.id), "dst": msg['src'], "leader": str(self.id), "type": "ok", "MID": msg['MID'], "value": str(value)}
        self.send(response)

    def begin_election(self):
        print("starting new election -------------------------------", flush=True)
        self.term+=1
        self.voted_for = None
        self.candidate = True
        self.follower = False
        self.leader = False

    def send_request_vote_RPC(self):
        request_vote_rpc = {"src": str(self.id),
                "dst": BROADCAST,
                "leader": self.leader_id,
                'type': 'request_vote_rpc',
                'MID': str(self.unique_MID),
                "last_log_idx": str(len(self.log_values)-1),
                "term":self.term}
            
        self.unique_MID+=1
        if self.voted_for == None:
            self.voted_for = self.id
            self_vote = {"vote_granted": True}
            self.votes.append(self_vote)

        print("sending vote request '%s'" % (request_vote_rpc,), flush=True)
        self.send(request_vote_rpc)
            
    def send_heartbeat(self):
        self.currtime = time.time()
        self.votes = []
        heartbeat = {"src": str(self.id), "dst": BROADCAST, "leader": str(self.id), "type": "heartbeat", "term": self.term, "MID": str(self.unique_MID)}
        self.unique_MID+=1
        print("sending heartbeat message", flush=True)
        self.send(heartbeat)

    def analyze_votes(self):
        count = 0
        for vote in self.votes:
            if vote['vote_granted'] == True:
                count+=1
        if count > math.ceil(len(self.others)/2):
            self.leader = True
            self.candidate = False
            self.follower = False
            self.voted_for = None
            self.leader_id = self.id
            print("I Am the leader!!!", flush=True)
            self.send_heartbeat()

    def respond_to_vote_request(self, msg):
        vote_response = False

        if msg['term'] >= self.term and self.voted_for == None:
            vote_response = True
            
        response = {"src": str(self.id), "dst": msg['src'], "leader": self.leader_id, "MID":str(self.unique_MID), "type": "vote_response", "vote_granted": vote_response}
        self.unique_MID+=1
        self.voted_for = msg['src']
        print("sending vote response '%s'" % (response,), flush=True)
        self.send(response)

    def handle_heartbeat(self, msg):
        if msg['term'] >= self.term:
            self.election_timeout = random.uniform(.150, .300)
            self.votes = []
            self.term = msg['term']
            self.follower = True
            self.leader = False
            self.candidate = False
            self.voted_for = None
            self.leader_id = msg['leader']
            self.currtime = time.time()
            print("LOG IS ---------------------------")
            print(self.log_values)

    # this is only working because we don't need to do another election, the if statement will never pass if leader fails and new election needs to happen
    def handle_vote_response(self, msg):
        self.votes.append(msg)
        self.analyze_votes()

    def send_append_confirmation(self, msg):
        msg = {"src": str(self.id), "dst": str(self.leader_id), 'key': msg['key'], 'value': msg['value'], 'client': msg['client'], "leader": str(self.leader_id), "type": "append_entry_rpc_response", "term": self.term, "MID": msg['MID'], "status": 'ok'}
        self.send(msg)

    def replicate_log(self, msg):
        if not self.leader:
            self.log_values[msg['key']] = msg['value']
            self.log_terms[msg['key']] = self.term
            self.log_indexes[msg['key']] = len(self.log_values)-1
            print("follower log is now: " + str(self.log_values), flush=True)
            self.send_append_confirmation(msg)
        # here we want to send a confirmation to the leader that we have added this log

    def try_to_commit(self, msg):

        #print('trying to commit msg with msg id: ' + str(msg['MID']))
        #if msg['status'] == 'ok':
          #  if msg['MID'] not in self.append_entry_rpc_responses:
          #      self.append_entry_rpc_responses[msg['MID']] = [msg['src']]
         #   else:
         #       self.append_entry_rpc_responses[msg['MID']].append(msg['src'])
        # we can commit and tell the user we have commited
        #if len(self.append_entry_rpc_responses[msg['MID']]) > len(self.others)/2 and "SENT" not in self.append_entry_rpc_responses[msg['MID']]:
            #self.state_machine_values[msg['key']] = msg['value']
            #self.state_machine_terms[msg['key']] = self.term
            #self.state_machine_indexes[msg['key']] = len(self.state_machine_values)-1
        response = {"src": str(self.id), "dst": msg['client'], "leader": str(self.id), "type": "ok", "MID": msg['MID']}
        self.send(response)
            #self.append_entry_rpc_responses[msg['MID']].append("SENT")
        #print('commiting msg with msg id: ' + str(msg['MID']))
        #print(self.append_entry_rpc_responses[msg['MID']])





        #print("we have sent the entry with MID: " + str(msg['MID']))
        #print("the followers that have responded to it are: " + str(self.append_entry_rpc_responses))


        # basically here we check if majority of the servers have received the data message. 
        # if they have, then we commit this to our state machine, and we send a message to followers that we have commited the message
        # also send a message to client that we have commited the message. But somehow keep track of which followers have commited it, and which haven't. 
        # for those who havent commited that message, keep sending them the append_rpc until we get back all repsonses
        # keep a dictionary of mids to list of followers, where the followers is everyone who has responded to the append_entry_rpc

    def run(self):
        self.currtime = time.time()
        while True:
            socks = []
            if self.leader:
                socks = select.select([self.socket], [], [], .07)[0]
            else:
                socks = select.select([self.socket], [], [], self.election_timeout)[0]

            for sock in socks:
                data, addr = sock.recvfrom(65535) 
                msg = data.decode('utf-8')
                msg = json.loads(msg)

                print("Received message '%s'" % (msg,), flush=True)

                if msg['type'] == 'heartbeat':
                    self.handle_heartbeat(msg)
                elif msg['type'] == 'request_vote_rpc':
                    self.respond_to_vote_request(msg)
                elif msg['type'] == 'vote_response' and self.candidate:
                    self.handle_vote_response(msg)
                elif msg['type'] == 'put':
                    self.respond_to_put(msg)
                elif msg['type'] == 'get':
                    self.respond_to_get(msg)
                elif msg['type'] == 'append_entry_rpc' and not self.leader:
                    self.replicate_log(msg)
                elif msg['type'] == 'append_entry_rpc_response' and self.leader:
                    self.try_to_commit(msg)

            if self.leader:
                self.election_timeout = random.uniform(.150,.300)
                if time.time() - self.currtime >= .07:
                    self.send_heartbeat()
            elif len(socks) == 0 or time.time() - self.currtime >= self.election_timeout:
                self.begin_election()
                self.send_request_vote_RPC()
                self.election_timeout = random.uniform(.150, .300)
                self.currtime = time.time()

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='run a key-value store')
    parser.add_argument('port', type=int, help="Port number to communicate")
    parser.add_argument('id', type=str, help="ID of this replica")
    parser.add_argument('others', metavar='others', type=str, nargs='+', help="IDs of other replicas")
    args = parser.parse_args()
    replica = Replica(args.port, args.id, args.others)
    replica.run()
